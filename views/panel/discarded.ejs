<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Discarded Shoes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    
    <div class="container">
        <h1>Discarded Shoe Table</h1>
    <div class="pgbtn" class="text-center ms-5 px-2">
    <a href="/shoe/list" class="btn btn-primary">Show all items</a>
  </div>
    <br>
        <table class="table">
          <thead>
            <tr>
              <th scope="col" class="text-center">#</th>
              <th scope="col" class="text-center">Title</th>
              <th scope="col" class="text-center">Description</th>
              <th scope="col" class="text-center">Price</th>
              <th scope="col" class="text-center">brand</th>
              <th scope="col" class="text-center">sizes</th>
              <th scope="col" class="text-center">colors</th>
              <th scope="col" class="text-center">Rating</th>
              <th colspan="3" scope="col" class="text-center">Actions</th>
            </tr>
          </thead>

          <tbody>
            <%if(shoes.length==0){%>
            <tr>
              <td colspan="6" class="text-center">No data found</td>
            </tr>
            <%}else{%>
              <%shoes.forEach((shoe,index) => {%>
            <tr>
              <th scope="row"><%=index+1%></th>
              <td><%=shoe.title%></td>
              <td><%=shoe.description%></td>
              <td><%=shoe.price%></td>
              <td><%=shoe.brand%></td>
              <td><%=shoe.sizes%></td>
              <td><%=shoe.colors%></td>
              <td><%=shoe.rating%></td>
                <td><a class="btn btn-outline-danger" href="/shoe/softdeleteRevert/<%=shoe._id%>" role="button">Revert Discard</a></td>
                <td><a class="btn btn-outline-danger" href="/shoe/delete/<%=shoe._id%>" role="button">Delete</a></td>
            
            </tr>
              <%})}%>
             
            </tbody>
          </table>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>